# REQUIRED: Your Ethereum wallet private key (0x-prefixed)
POLYMARKET_PRIVATE_KEY=0x_your_wallet_private_key_here

# Trade size in USD per order (default: 5)
TRADE_SIZE_USD=5

# Target prices to place limit orders at (comma-separated)
# The bot places limit buys at these prices on BOTH YES and NO sides
TARGET_PRICES=0.07,0.08,0.09,0.10

# Place orders when this many seconds remain before market expiry (default: 60 = last 1 min)
ENTRY_SECONDS_BEFORE_EXPIRY=60

# Don't place orders if fewer than this many seconds remain (default: 5)
MIN_SECONDS_BEFORE_EXPIRY=5

# Set to 'true' to log orders without actually placing them
DRY_RUN=true

# Optional: Polygon RPC URL for claim script (avoids rate limits from default provider)
# e.g. https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY or https://polygon-rpc.com
# POLYGON_RPC_URL=

# Optional: Gas for claim script (Polygon needs ~25+ gwei tip). Defaults: 30 gwei tip, 50 gwei max
# GAS_TIP_GWEI=30
# GAS_MAX_FEE_GWEI=50
